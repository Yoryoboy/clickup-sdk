{
  "name": "@yoryoboy/clickup-sdk",
  "version": "1.0.5",
  "description": "A modular JavaScript SDK for interacting with the ClickUp API",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "if exist dist rmdir /s /q dist",
    "build": "pnpm run clean && mkdir dist && xcopy /E /I /Y src dist && echo export { default } from \"./core/ClickUp.js\"; > dist/index.js",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "clickup",
    "api",
    "sdk",
    "javascript",
    "task-management"
  ],
  "author": "Yoryoboy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yoryoboy/clickup-sdk.git"
  },
  "dependencies": {
    "axios": "^1.8.3"
  },
  "peerDependencies": {
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "standard": "^17.1.2"
  }
}
